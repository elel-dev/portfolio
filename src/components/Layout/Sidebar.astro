---
import Icon from "astro-icon";
import Title from "../UI/Title/Title";
---
<aside class="sidebar">
  <Title />
  <section class="filestree">
    <div class="treeImgDiv">
      <img src="/images/filestree.jpg" alt="portfolio_filestree_image"/>
    </div>
  </section>
  <section class="social">
    <p>(a)social</p>
    <a href="https://medium.com/@elel.develop" target="_blank" rel="noopener noreferrer">
      <Icon name="medium" />
    </a>
    <a href="https://github.com/elel-dev">
      <Icon name="github" />
    </a>
    <a href="https://github.com/elel-dev/portfolio" target="_blank" rel="noopener noreferrer">
      <Icon name="repo" />
    </a>
    <a href="https://github.com/elel-dev/neovim-config" target="_blank" rel="noopener noreferrer">
      <Icon name="neovim" />
    </a>
  </section>
</aside>

<style>
  /*
*  =======
*  SIDEBAR
*  =======
*/

  .sidebar {
    position: fixed;
    width: var(--sidebar-width);
    min-width: 115px;
    height: var(--sidebar-height);
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: space-between;
    border-right: var(--layout-border);
  }

  /*
*  ========
*  FILESTREE
*  ========
*/

  .filestree {
    height: 70vh;
    width: 100%;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    pointer-events: none;
  }

  .treeImgDiv {
    width: 90%;
    height: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
  }
  
  .treeImgDiv img {
    width: 100%;
    height: 100%;
  }

  /*
*  =======
*  SOCIAL
*  =======
*/

  .social {
    width: 100%;
    height: 15;
    display: flex;
    align-items: flex-end;
    justify-content: space-around;
    padding-bottom: 10%;
  }

  .social a {
    border-radius: 50%;
    width: var(--icon-s);
    height: var(--icon-s);
  }

  .social p {
    user-select: none;
  }

  .social a:hover {
    transform: scale(1.1);
  }

  .social a [astro-icon] {
    transition: --transition-f;
  }

  .social a:hover [astro-icon="medium"] {
    color: var(--clr-gruv-orange);
  }

  .social a:hover [astro-icon="github"] {
    color: var(--clr-gruv-green);
  }

  .social a:hover [astro-icon="repo"] {
    color: var(--clr-gruv-yellow);
  }

  .social a:hover [astro-icon="neovim"] {
    color: var(--clr-gruv-aqua);
  }

  @media screen and (max-width: 1650px) {
    .sidebar {
      width: 10vw;
    }

    .contact h3,
    .contact h2 {
      display: none;
    }

    .contact {
      width: 100%;
      justify-content: center;
      padding: 0;
      border: none;
      margin: 10% 0;
    }

    .contact:hover {
      border: none;
    }

    .contact [astro-icon] {
      margin: 0;
    }

    .social {
      flex-direction: column;
      align-items: center;
    }
  }

  @media screen and (max-width: 400px){
    .sidebar {
      width: 25vw;
      min-width: unset;
      border-right: none;
    }
    .contact:nth-child(3) {
      display: none;
    }
  }
</style>
